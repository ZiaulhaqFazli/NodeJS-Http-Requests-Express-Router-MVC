<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
        <%- include('./partials/navbar.ejs') %>
        <div class="details content">
            <h2> All Blogs </h2>
            <% if(blogs.length > 0){ %>
                <% blogs.forEach( blog => { %>
                    <a class="single" href="/blogs/<%= blog._id %>">
                        <h3 class="title"><%= blog.title %></h3>
                        <p class="body"><%= blog.body %></p>
                    </a>
                <% }) %>
            <%}else{ %>
                <p> There are no blog to display! </p>
            <%} %>
        </div>
    
</body>
</html>